<Window x:Class="Kniffel.views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrieren" Height="250" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Benutzername:"/>
            <TextBox x:Name="UsernameBox" Margin="0,5"/>

            <TextBlock Text="Passwort:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

            <Button Content="Registrieren" Click="Register_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>